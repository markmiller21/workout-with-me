<div class="large-12 columns">
  <div class="row">
    <div class="large-6 large-offset-3 medium-8 small-12 columns">
      <h3 id='match_page_header'>Here are your matches</h3>
    </div>
  </div>
<hr>
  <div class="large-6 large-offset-3 medium-8 small-12 columns">
    <% @initiator_matches.each do |match| %>

    <div class="row">
      <div class="large-10 medium-9 small-12 columns">
        <div class="row">
          <div class="large-2 medium-3 small-3 columns">
            <div class="round-image-50-match-index">
            <%= image_tag match.responder.avatar.url(:thumb)%>
        </div>
      </div>
          <div class="matches-index-activities-list">
            <strong><p class='matcher_name'><%= link_to match.responder.name, user_path(match.responder) %></p></strong>
            <% if match.messages.all.last %>
              <div class="row">
                <div class="large-12 medium-12 small-12 columns">
                  <p id='activities-index-message-time' class='last_message'><%= match.messages.all.last.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y at %l:%M") %></p>
                </div>
              </div>
              <div class="row">
                <div class="large-12 medium-12 small-12 columns">
                  <div class="last-message-box"><p class='last_message'><%= match.messages.all.last.content %></p>
                  </div>
                </div>
              </div>
            <% else %>
              <p id="no_messages">No previous messages</p>
            <% end %>

            <div id="matched-user-activities">
              <% match.responder.activities.each do |activity| %>
                <div class="activities-name">
                  <p><%= activity.name %> </p>
                </div>
              <% end %>
              <div class="start-chat">
                <p><%= link_to "Chat", match_messages_path(match) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>


